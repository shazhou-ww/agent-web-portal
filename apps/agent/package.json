{
  "name": "@agent-web-portal/agent",
  "version": "0.1.0",
  "description": "AWP Agent - Browser-based AI agent with CAS integration (fullstack)",
  "type": "module",
  "scripts": {
    "dev": "vite --config frontend/vite.config.ts",
    "build": "bun run build:frontend",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "preview": "vite preview --config frontend/vite.config.ts",
    "lint": "biome check frontend/src",
    "typecheck": "tsc --noEmit",
    "deploy": "bun run scripts/deploy.ts",
    "deploy:frontend": "bun run scripts/deploy-frontend.ts"
  },
  "dependencies": {
    "@agent-web-portal/awp-client-browser": "workspace:*",
    "@agent-web-portal/cas-client-browser": "workspace:*",
    "@agent-web-portal/client": "workspace:*",
    "@agent-web-portal/client-browser": "workspace:*",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.975.0",
    "@aws-sdk/client-cloudfront": "^3.975.0",
    "@aws-sdk/client-s3": "^3.975.0",
    "@types/bun": "latest",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^6.4.1"
  }
