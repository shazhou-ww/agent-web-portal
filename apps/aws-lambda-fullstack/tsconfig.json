{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["bun-types", "node"]
  },
  "include": ["backend/src/**/*", "backend/server.ts", "frontend/src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "backend/dist", "frontend/dist"]
}
