# ============================================================================
# Shared Auth (awp-auth stack)
# ============================================================================
COGNITO_USER_POOL_ID=  # e.g. us-east-1_xxxxxxxxx
COGNITO_HOSTED_UI_URL=  # e.g. https://awp-auth.auth.us-east-1.amazoncognito.com
COGNITO_DOMAIN=  # e.g. awp-auth

# IdP credentials (for deploying awp-auth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ============================================================================
# CASFA App
# ============================================================================
CASFA_COGNITO_CLIENT_ID=  # from casfa stack output
CASFA_CALLBACK_BASE_URL=  # e.g. https://casfa.your-domain.com

# ============================================================================
# Local Dev Ports
# Port Allocation Convention:
#   87xx - Databases (DynamoDB, etc.)
#   88xx - Backend APIs
#   89xx - Frontend dev servers
# ============================================================================

# Databases
DYNAMODB_PORT=8700

# Backend APIs
PORT_CASFA_API=8800
PORT_CASFA_V2_API=8801
PORT_IMAGE_WORKSHOP_API=8802
PORT_EXAMPLE_STACK_API=8803
PORT_EXAMPLE_AGENT_SERVICE_API=8804

# Frontend dev servers
PORT_CASFA_WEBUI=8900
PORT_IMAGE_WORKSHOP_WEBUI=8902
PORT_EXAMPLE_AGENT_WEBUI=8904
PORT_EXAMPLE_WEBUI=8905

# ============================================================================
# Local Dev Database
# ============================================================================
DYNAMODB_ENDPOINT=http://localhost:8700
TOKENS_TABLE=casfa-tokens
CAS_REALM_TABLE=casfa-cas-realm
CAS_DAG_TABLE=casfa-cas-dag

# ============================================================================
# Local Dev CAS Storage (file system)
# ============================================================================
# Relative path is resolved relative to this .env file's directory
# If in root .env, path is relative to repo root
# If in apps/casfa/.env, path is relative to apps/casfa
CAS_STORAGE_DIR=apps/casfa/.local-cas-storage
