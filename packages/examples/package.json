{
  "name": "@agent-web-portal/examples",
  "version": "0.2.0",
  "private": true,
  "description": "Example Lambda portals for Agent Web Portal",
  "type": "module",
  "main": "dist/handler.mjs",
  "scripts": {
    "start": "bun run server.ts",
    "dev": "bun run --cwd ui dev",
    "dev:local": "cd ../.. && bun run --watch packages/examples/server.ts",
    "clean": "rimraf .turbo dist .aws-sam",
    "build": "bun build src/handler.ts --outdir dist --format esm --target node --external '@aws-sdk/*' && mv dist/handler.js dist/handler.mjs",
    "build:ui": "cd ui && bun run build && cp -r dist ../dist/ui",
    "build:all": "bun run build && bun run build:ui",
    "sam:build": "bun run build && sam build",
    "sam:local": "sam local start-api --port 3456",
    "sam:deploy": "sam deploy --guided",
    "sam:remove": "sam delete",
    "test": "bun test",
    "test:e2e": "bun test e2e.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "check": "tsc --noEmit && biome check ."
  },
  "dependencies": {
    "@agent-web-portal/auth": "workspace:*",
    "@agent-web-portal/aws-lambda": "workspace:*",
    "@agent-web-portal/client": "workspace:*",
    "@agent-web-portal/core": "workspace:*",
    "@aws-sdk/client-dynamodb": "^3.975.0",
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "jsonata": "^2.0.5",
    "zod": "3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/bun": "latest",
    "@types/node": "^22.10.5"
  }
}
