{
  "name": "agent-web-portal-monorepo",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "examples:api": "bun run scripts/examples.ts api",
    "examples:webui": "bun run scripts/examples.ts webui",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore packages",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore packages --fix",
    "check": "turbo run check && bun run lint:md",
    "check:fix": "turbo run check:fix && bun run lint:md:fix",
    "clean": "turbo run clean && rimraf .turbo .publish",
    "publish:prepare": "bun run scripts/publish.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "markdownlint-cli": "^0.47.0",
    "rimraf": "^6.1.2",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.5"
}
