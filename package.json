{
  "name": "agent-web-portal-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "examples:api": "bun run scripts/examples.ts api",
    "examples:webui": "bun run scripts/examples.ts webui",
    "examples:dev": "bun run scripts/examples.ts dev",
    "examples:deploy": "bun run scripts/examples.ts deploy",
    "examples:deploy:api": "bun run --cwd apps/example-stack deploy",
    "examples:deploy:webui": "bun run --cwd apps/example-webui deploy",
    "cas:api": "bun run scripts/cas.ts api",
    "cas:webui": "bun run scripts/cas.ts webui",
    "cas:dev": "bun run scripts/cas.ts dev",
    "cas:deploy": "bun run scripts/cas.ts deploy",
    "cas:deploy:api": "bun run --cwd apps/cas-stack deploy",
    "cas:deploy:webui": "bun run --cwd apps/cas-webui deploy",
    "casfa:dev": "bun run --cwd apps/casfa dev",
    "casfa:dev:backend": "bun run --cwd apps/casfa dev:backend",
    "casfa:dev:frontend": "bun run --cwd apps/casfa dev:frontend",
    "casfa:deploy": "bun run --cwd apps/casfa deploy",
    "casfa:deploy:backend": "bun run --cwd apps/casfa deploy:backend",
    "casfa:deploy:frontend": "bun run --cwd apps/casfa deploy:frontend",
    "image-workshop:dev": "bun run --cwd apps/image-workshop dev",
    "image-workshop:dev:backend": "bun run --cwd apps/image-workshop dev:backend",
    "image-workshop:dev:frontend": "bun run --cwd apps/image-workshop dev:frontend",
    "image-workshop:deploy": "bun run --cwd apps/image-workshop deploy",
    "image-workshop:deploy:backend": "bun run --cwd apps/image-workshop deploy:backend",
    "image-workshop:deploy:frontend": "bun run --cwd apps/image-workshop deploy:frontend",
    "agent:dev": "bun run --cwd apps/agent dev",
    "agent:deploy": "bun run --cwd apps/agent deploy",
    "agent:deploy:frontend": "bun run --cwd apps/agent deploy:frontend",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore packages",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore packages --fix",
    "check": "turbo run check && bun run lint:md",
    "check:fix": "turbo run check:fix && bun run lint:md:fix",
    "clean": "turbo run clean && rimraf .turbo .publish",
    "publish:prepare": "bun run scripts/publish.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "markdownlint-cli": "^0.47.0",
    "rimraf": "^6.1.2",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.5"
}
