{
  "name": "agent-web-portal-monorepo",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore packages",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore packages --fix",
    "check": "turbo run check && bun run lint:md",
    "check:fix": "turbo run check:fix && bun run lint:md:fix",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "markdownlint-cli": "^0.47.0",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.5"
}
